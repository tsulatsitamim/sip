// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid()) @db.Char(25)
  username  String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model AcademicYear {
  id            String          @id @default(cuid()) @db.Char(25)
  name          String
  status        Boolean         @default(false)
  AcademicClass AcademicClass[]
}

model AcademicClass {
  id             String       @id @default(cuid()) @db.Char(25)
  name           String
  academicYearId String       @db.Char(25)
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id], onDelete: Restrict)
  students       Student[]
  stage          Stage?       @relation(fields: [stageId], references: [id], onDelete: Restrict)
  stageId        String?      @db.Char(25)
}

enum Gender {
  Laki_Laki
  Perempuan
}

enum Religion {
  Islam
}

enum BloodType {
  O
  A
  B
  AB
}

enum YaTidak {
  Ya
  Tidak
}

model Student {
  id               String          @id @default(cuid()) @db.Char(25)
  name             String
  nickname         String?
  gender           Gender?
  religion         Religion?
  citizenship      String?
  childOrder       Int?
  siblings         Int?
  stepSiblings     Int?
  fosterSiblings   Int?
  weight           Int?
  height           Int?
  bloodType        BloodType?
  diseaseHistory   String?
  allergy          String?
  spicy            YaTidak?
  disability       String?
  retardation      String?
  stayWith         String?
  characteristic   String?
  language         String?
  nis              String?         @unique
  nisn             String?         @unique
  birthPlace       String          @default("")
  birthDate        DateTime?       @db.Date
  fatherName       String          @default("")
  fatherBirthPlace String          @default("")
  fatherBirthDate  DateTime?       @db.Date
  fatherJob        String          @default("")
  fatherEducation  String          @default("")
  motherName       String          @default("")
  motherBirthPlace String          @default("")
  motherBirthDate  DateTime?       @db.Date
  motherJob        String          @default("")
  motherEducation  String          @default("")
  parentAddress    String?
  parentPhone      String?
  waliName         String          @default("")
  waliBirthPlace   String          @default("")
  waliBirthDate    DateTime?       @db.Date
  waliJob          String          @default("")
  waliEducation    String          @default("")
  waliAddress      String?
  waliPhone        String?
  address          String          @default("")
  phone            String          @default("")
  note             String          @default("")
  createdAt        DateTime        @default(now())
  academicClasses  AcademicClass[]
}

model Stage {
  id            String          @id @default(cuid()) @db.Char(25)
  name          String
  AcademicClass AcademicClass[]
}
